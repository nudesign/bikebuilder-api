<%= form_for manufacturer do |f| %>

  <fieldset>
    <legend>Identificação</legend>

    <fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </fieldset>
  
    <fieldset>
      <%= f.label :website %>
      <%= f.text_field :website, placeholder: "http://..." %>
    </fieldset>

  </fieldset>

  <div>
    <%= f.submit %>
  </div>
<% end %>
